{
   "version": 2,
   "name": "chat-gpt-portfolio-website",
   "builds": [
      { "src": "app.js", "use": "@vercel/node" }
   ],
   "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "headers": [
    {
      "source": "/public/css/:path*",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/public/js/:path*",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/public/images/:path*.(jpg|jpeg|png|gif|svg|webp)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "image/:extension"
        }
      ]
    }
  ]
}
